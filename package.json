{
  "name": "raahi-backend",
  "version": "1.0.0",
  "description": "Raahi Cab Booking Backend API - Microservices",
  "private": true,
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev:gateway": "npm run dev --workspace=@raahi/gateway",
    "dev:auth": "npm run dev --workspace=@raahi/auth-service",
    "dev:user": "npm run dev --workspace=@raahi/user-service",
    "dev:driver": "npm run dev --workspace=@raahi/driver-service",
    "dev:ride": "npm run dev --workspace=@raahi/ride-service",
    "dev:pricing": "npm run dev --workspace=@raahi/pricing-service",
    "dev:notification": "npm run dev --workspace=@raahi/notification-service",
    "dev:realtime": "npm run dev --workspace=@raahi/realtime-service",
    "dev:admin": "npm run dev --workspace=@raahi/admin-service",
    "build:shared": "npm run build --workspace=@raahi/shared",
    "build:all": "npm run build:shared && npm run build --workspaces --if-present",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "db:studio": "npx prisma studio",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "firebase-admin": "^13.6.1",
    "geolib": "^3.3.4",
    "google-auth-library": "^9.6.3",
    "h3-js": "^4.4.0",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "prisma": "^5.7.1",
    "socket.io": "^4.7.4",
    "twilio": "^4.19.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^6.4.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  },
  "author": "Raahi Team",
  "license": "MIT"
}
