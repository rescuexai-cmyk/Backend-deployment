# Database
DATABASE_URL="postgresql://username:password@localhost:5432/raahi_db?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your-refresh-token-secret"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Server — Gateway uses port 3000 (avoids macOS port 5000 conflict). Other services use 5001–5008.
# Do not set a global PORT; each service has its own default.
GATEWAY_PORT=3000
NODE_ENV="development"

# CORS
FRONTEND_URL="http://localhost:3000"

# Redis
REDIS_URL="redis://localhost:6379"

# Email (Nodemailer)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# SMS (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Truecaller
TRUECALLER_API_KEY="your-truecaller-api-key"

# Payment Gateways
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
RAZORPAY_KEY_ID="your-razorpay-key-id"
RAZORPAY_KEY_SECRET="your-razorpay-key-secret"

# Maps API
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# Pricing Configuration
BASE_FARE=25
PER_KM_RATE=12
PER_MINUTE_RATE=2
SURGE_MULTIPLIER_MAX=3.0
PEAK_HOUR_MULTIPLIER=1.5

# File Upload (Local fallback)
MAX_FILE_SIZE=5242880
UPLOAD_PATH="./uploads"

# DigitalOcean Spaces (S3-compatible document storage)
# Leave empty to use local disk storage
DO_SPACES_ENDPOINT="nyc3.digitaloceanspaces.com"
DO_SPACES_BUCKET="raahi-documents"
DO_SPACES_KEY="your-spaces-access-key"
DO_SPACES_SECRET="your-spaces-secret-key"
DO_SPACES_CDN_ENDPOINT=""

# Internal Service Communication
INTERNAL_API_KEY="raahi-internal-service-key-change-in-production"

# DigiLocker Integration (Aadhaar verification)
DIGILOCKER_CLIENT_ID="your-digilocker-client-id"
DIGILOCKER_CLIENT_SECRET="your-digilocker-client-secret"

# Encryption (for sensitive data like tokens)
ENCRYPTION_KEY="your-32-char-encryption-key-here"

# Admin Configuration
# Comma-separated list of admin email addresses (for production)
ADMIN_EMAILS="admin@raahi.com,support@raahi.com"

# Firebase (Push Notifications)
FIREBASE_PROJECT_ID="raahi-5f22e"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@raahi-5f22e.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY\n-----END PRIVATE KEY-----"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Driver Penalties
PENALTY_STOP_RIDING_AMOUNT=10

